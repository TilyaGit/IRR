@model IRR.Core.Category

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Наименование под категорий</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

                @if (ViewBag.CategoryParenId != null)
                {
                    <label class="control-label">Наименование категорий</label>
                    <input class="form-control" value="@ViewBag.CategoryParentName" />
                    <input type="hidden" asp-for="ParentId" value="@ViewBag.CategoryParenId" />
                }

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

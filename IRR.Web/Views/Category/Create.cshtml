@model IRR.Core.Category
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                @if (ViewBag.CategoryParenId != null)
                {
                    <label class="control-label">Наименование категорий</label>
                    <input class="form-control" value="@ViewBag.CategoryParentName" disabled/>
                    <input type="hidden" asp-for="ParentId" value="@ViewBag.CategoryParenId" />
                }

                <label asp-for="Name" class="control-label">Наименование категорий</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="+" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        Обратно к списку категорий
    </a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
